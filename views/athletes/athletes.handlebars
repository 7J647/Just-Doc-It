            <h5>SPORT: {{sport}}</h5>
        </div>
        <div class="col s4">
            <h5>INJURY SITE: {{injury_site}}</h5>
        </div>
        <div class="col s4">
            <h5>INJURY: {{injury}}</h5>
        </div>
        {{/each}}
    </section>


</main>
