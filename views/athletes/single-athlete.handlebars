<main class="container">
    <h2>{{athlete_name}}</h2>
    {{!-- <button class="button" id="add-athlete">ADD ATHLETE</button> --}}
    <div class="row" id="update-athlete-form">
        <form class="col s12">
            <div class="row">
                <div class="input-field col s6">
                    <label for="athlete_name">FULL NAME</label>
                    <input id="athlete_name" type="text" class="validate" value="{{athlete_name}}">
                </div>
                <div class="input-field col s6">
                    <input id="sport" type="text" class="validate" value="{{sport}}">
                    <label for="sport">SPORT</label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s6">
                    <label for="injury_site">INJURY SITE</label>
                    <input id="injury_site" type="text" class="validate" value="{{injury_site}}">
                </div>
                <div class="input-field col s6">
                    <input id="injury" type="text" class="validate" value="{{injury}}">
                    <label for="injury">INJURY</label>
                </div>
            </div>
            <button type='submit' class="button" id="delete-athlete" data-id="{{id}}">DELETE</button>
            <button type='submit' class="button" id="update-athlete" data-id="{{id}}">SUBMIT</button>
        </form>
    </div>
    <section class="athletes-container">
        <div class="row">
            <div class="col s4">
                <h5>SPORT: {{sport}}</h5>
            </div>
            <div class="col s4">
                <h5>INJURY SITE: {{injury_site}}</h5>
            </div>
            <div class="col s4">
                <h5>INJURY: {{injury}}</h5>
            </div>
        </div>
    </section>
</main>
<a href="/athlete"><button>Back</button></a>