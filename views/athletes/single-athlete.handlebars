<nav class="nav-bar">
    <h5>ATHLETE'S INFO</h5>
</nav>
<main class="container">
    <button class="button back-btn"><a class="input-color" href="/athlete">BACK</a></button>
    </br>
    <h2>{{athlete_name}}</h2>
    {{!-- <button class="button" id="add-athlete">ADD ATHLETE</button> --}}
    <div class="row" id="update-athlete-form">
        <form class="col s12">
            <div class="row">
                <div class="input-field col s6">
                    <label for="athlete_name">FULL NAME</label>
                    <input id="athlete_name" type="text" class="input-color" value="{{athlete_name}}">
                </div>
                <div class="input-field col s6">
                    <input id="sport" type="text" class="input-color" value="{{sport}}">
                    <label for="sport">SPORT</label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s6">
                    <label for="injury_site">INJURY SITE</label>
                    <input id="injury_site" type="text" class="input-color" value="{{injury_site}}">
                </div>
                <div class="input-field col s6">
                    <input id="injury" type="text" class="input-color" value="{{injury}}">
                    <label for="injury">INJURY</label>
                </div>
            </div>
            <a href="/athlete"><button type='submit' class="button" id="delete-athlete"
                    data-id="{{id}}">DELETE</button></a>
            <button type='submit' class="button" id="update-athlete" data-id="{{id}}">SUBMIT</button>
            <button type='submit' class="button" id="update-athlete"><a class="input-color" href="/treatment">EDIT
                    TREATMENT</a></button>
        </form>
    </div>
    <section class="athletes-container">
        <div class="row">
            <div class="col s4">
                <h5>SPORT:</h5>
                <h6>{{sport}}</h6>
            </div>
            <div class="col s4">
                <h5>INJURY SITE:</h5>
                <h6>{{injury_site}}</h6>
            </div>
            <div class="col s4">
                <h5>INJURY:</h5>
                <h6>{{injury}}</h6>
            </div>
        </div>
    </section>
    <section class="athletes-container">
        <div class="row">
            <div class="col s12">
                {{#each Treatments}}
                <h5> TREATMENT:</h5>
                <h6> {{treatment_name}}</h6>
            </div>
        </div>
        <div class="row">
            <div class="col s12">
                <h5> PROGRESS NOTE:</h5>
                <h6>{{progress_note}}</h6>
                <hr>
                {{/each}}
            </div>
        </div>
    </section>
</main>
